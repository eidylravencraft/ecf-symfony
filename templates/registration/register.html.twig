{% extends 'base.html.twig' %}

{% block title %}Enregistrez vous!{% endblock %}

{% block body %}
    <div class="container f-flex flex-column align-items-center justify-content-space-between w-50 shadow p-5 rounded-4 mt-5 bg-light">
        <h1>Cr√©ez un compte</h1>
        <div class="container w-60 d-flex flex-column gap-5 align-items-center justify-content-center mt-5">
            {{ form_start(registrationForm) }}
                <div class="d-flex flex-row gap-3 justify-content-between mb-3">
                    {{ form_row(registrationForm.firstName) }}
                    {{ form_row(registrationForm.lastName) }}
                </div>
                <div class="d-flex flex-row gap-3 justify-content-between mb-3 mt-3">
                    {{ form_row(registrationForm.birthDate) }}
                    {{ form_row(registrationForm.telephone) }}
                </div>
                {{ form_row(registrationForm.address) }}
                <div class="d-flex flex-row gap-3 justify-content-between mb-3 mt-3">
                    {{ form_row(registrationForm.postal) }}
                    {{ form_row(registrationForm.city) }}
                </div>
                {{ form_row(registrationForm.email) }}
                <div class="d-flex flex-row gap-3 justify-content-between mb-3 mt-3">
                    {{ form_row(registrationForm.plainPassword.first, {
                        label: 'Mot de passe'
                    }) }}
                    {{ form_row(registrationForm.plainPassword.second, {
                        label: 'Confirmer le mot de passe'
                    }) }}
                    {# {{ form_row(registrationForm.confirmPassword, {
                        label: 'Confirmer le mot de passe'
                    }) }} #}
                </div>
                <div style="color: red; font-weight: bold">{{ form_errors(registrationForm)}}</div>
                <div class="mt-3 form-check">{{ form_row(registrationForm.agreeTerms) }}</div>
                <button type="submit" class="btn btn-primary mt-3">S'enregistrer</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
