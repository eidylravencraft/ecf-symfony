{% block navbar %}
  <nav class="navbar navbar-expand-lg bg-body-tertiary bg-custom">
    <div class="container-fluid">
      <a class="navbar-brand text-dark" href="#">BiblioTech</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active text-dark fw-bold" href="/">{{ 'navbar.accueil'|trans }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark fw-bold" href="#">{{ 'navbar.our-books'|trans }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark fw-bold" href="{{ path('app_workspaces') }}">{{ 'navbar.our-workplaces'|trans }}</a>
          </li>
        </ul>

        {% if is_granted('ROLE_ADMIN') %}
          <span class="fw-bold ml-5" style="color: lightgreen; border-left: 2px solid black; margin-left: 10px; padding-left: 10px">{{ 'navbar.admin'|trans }}</span>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active fw-bold" href="{{ path('app_admin_user_index') }}" style="color: lightgreen;">{{ 'navbar.users'|trans }}</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fw-bold" href="#" style="color: lightgreen;">{{ 'navbar.books'|trans }}</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fw-bold" href="{{ path('app_admin_workplace_index') }}" style="color: lightgreen;">{{ 'navbar.workplaces'|trans }}</a>
            </li>
          </ul>
        {% endif %}

        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active text-dark fw-bold" href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({ locale: 'fr' })) }}"><img src="https://cdn.countryflags.com/thumbs/france/flag-400.png" alt="Drapeau FranÃ§ais" width="30" height="20" /></a>
          </li>
          <li class="nav-item">
            <a class="nav-link active text-dark fw-bold" href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({ locale: 'en' })) }}"><img src="https://www.countryflags.com/wp-content/uploads/united-kingdom-flag-png-large.png" alt="Drapeau Anglais" width="30" height="20" /></a>
          </li>
        </ul>

        {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') or is_granted('ROLE_SUBSCRIBER') %}
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle text-dark fw-bold" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">{{ 'navbar.welcome'|trans }} {{ app.user.firstName }}</a>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="{{ path('profile_user') }}">{{ 'navbar.account'|trans }}</a>
                </li>
                <li>
                  <a class="dropdown-item" href="{{ path('app_logout') }}">{{ 'navbar.logout'|trans }}</a>
                </li>
              </ul>
            </li>
          </ul>
        {% else %}
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active text-dark fw-bold" href="{{ path('app_login') }}">{{ 'navbar.login'|trans }}</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active text-dark fw-bold" href="{{ path('app_register') }}">{{ 'navbar.sign'|trans }}</a>
            </li>
          </ul>
        {% endif %}
      </div>
    </div>
  </nav>
{% endblock %}
