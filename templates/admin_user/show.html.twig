{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}
{% block navbar %}{% include 'components/_navbaradmin.html.twig' %}{% endblock %}
{% block body %}
    <h2 class="text-center mb-5">Détails de {{ user.firstName }} {{ user.lastName }}({{ user.email }})</h2>

    <table class="table">
        <tbody>
            
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{% for role in user.roles %}
                    {{ role }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
            </tr>
            
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.address }}</td>
            </tr>
            <tr>
                <th>Code Postal</th>
                <td>{{ user.postal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ user.birthDate ? user.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_user_index') }}"><button class="btn btn-secondary">Retour</button></a>

    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}"><button class="btn btn-primary">Modifier</button></a>

    {{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}
